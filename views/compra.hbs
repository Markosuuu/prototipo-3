                  <input
                    type="text"
                    class="d-inline"
                    value="1"
                    style="background: #ff98a9"
                  />
                  <button
                    type="button"
                    class="btn btn-success d-inline"
                    style="background: #ff98a9"
                  >
                    +
                  </button>
                </div>
              </div>
              <div class="boton ps-4 ps-sm-0">
                <button type="button" class="btn btn-primary">
                  Agregar al carrito
                </button>
              </div>
            </div>
          </div>
