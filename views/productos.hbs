                    <a href="#" class="nav-link link-light px-0 fs-6"
                      >Malvadiscos</a>
                  </li>
                </ul>
              </li>
            </ul>
          </div>
        </div>

        <!--
          Contenido
        -->

        <div class="col">
          <div class="container">
            <div class="producto-conjunto row ms-4">
              {{#each productos}}
              <div class="producto-muestra col-12 col-md-6 col-xl-4 mb-5">
                <div
                  class="card p-3"
                  style="
                    width: 18rem;
                    background-color: rgb(255, 210, 210);
                    border-radius: 22px;
                  "
                >
                  <img
                    src="{{imagen}}"
                    class="card-img-top imagen"
                    alt="..."
                  />
                  <div class="card-body">
                    <h5 class="card-title text-dark text-center nombre">
                      {{nombre}}
                    </h5>
                    <p class="text-dark text-center precio">${{precio}}</p>
                    <a href="/compra/{{id_producto}}"  class="btn btn-success me-5 detalle">Detalles</a>
                    <button class="btn btn-success rounded-circle ms-5 addToCart" data-id="{{id_producto}}">
                      +
                    </button>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>

