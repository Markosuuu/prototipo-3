      <div class="row">
        <!-- 
          Sidebar 
        -->
        <div
          class="col-3 col-xl-2 rounded d-none d-lg-block"
          style="background-color: rgb(255, 184, 184)"
        >
          <div class="align-items-start px-0 pt-2 text-white">
            <a
              href="#"
              class="d-flex align-items-center pb-3 text-white text-decoration-none"
            >
              <span class="fs-3">Categor√≠as</span>
            </a>
            <hr />
            <ul class="nav nav-pills mx-auto mb-auto align-items-start">
              <li class="mb-3 w-100">
                <ul class="nav ms-2 flex-column">
                  <li>
                    <a href="#" class="nav-link link-light px-0 fs-6"
                      >Chocolate</a
                    >
                  </li>
                  <li>
                    <a href="#" class="nav-link link-light px-0 fs-6"
                      >Gomitas</a
                    >
                  </li>
                  <li>
                    <a href="#" class="nav-link link-light px-0 fs-6"
                      >Bombones</a
                    >
