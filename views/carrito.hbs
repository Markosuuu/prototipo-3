{{> navbar}}
    <!--
        carrito
    -->
    <div class="container">
      <div class="carrito mt-5 ms-3">
        <div class="cart">
            <h1>Mi Carrito</h1>
        </div>
        <div class="tbody"></div>
        <div class="pedido">
          <div class="row">
            <div class="col-12 d-inline">
              <h4 class="fs-3 fw-bold">SubTotal (Sin envio):</h4>
              <p class="fs-3 total"></p>
            </div>
            <div class="col-lg-6 col-12">
              <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-primary fs-5 p-2 my-lg-5 my-3 mx-2">
                Realizar compra
              </button>
            </div>
            <div class="col-lg-6 col-12">
              <a href="productos">
                <button type="button" class="btn btn-primary fs-5 p-2 my-lg-5 my-3 mx-2">
                  Ver mas Productos
                </button>
              </a>
            </div>
          </div>
        </div>

        <div class="text-end mb-5">
          <img class="img-fluid" width="220" src="img/assets/carrito.png" alt="" />
        </div>
      </div>
    </div>


    {{!-- model --}}

    <div class="modal fade" id="exampleModal"  tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div style="background-color: #d86578; color: white;" class="modal-content p-3 mt-2  card-login card-color">
          <form method="POST" id="cheackoutCart">
            <div class="row g-3 mb-3">
              <div class="col-md-6">
                <label for="validationDefault01" class="form-label"> <em>Puntos de encuentro</em> </label>
                  <select class="form-select d-block w-100" id="punto" name=" punto"
                      required="">
                      <option value="">Elegir...</option>
                      <option value="Cadete">Cadete</option>
                      <option value="Correo">Correo Argentino</option>
                      <option value="Andreani">Andreani</option>
                      <option value="DHL">DHL</option>
                  </select>
              </div>
              <div class="col-md-6">
                <label for="validationDefault02" class="form-label"> <em>Metodo de pago</em> </label>
                <select class="form-select d-block w-100" id="paymentMethod" name="paymentMethod"
                    required="">
                    <option value="">Elegir...</option>
                    <option value="Efectivo">Efectivo</option>
                    <option value="Débito">Tarjeta Débito</option>
                    <option value="Crédito">Tarjeta Crédito</option>
                </select>
              </div>
              <div class="col-md-12 ">
                <button type="submit" class="btn btn-primary fs-5 p-2 my-lg-5 my-3 mx-2">
                  Realizar compra
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
{{> footer}}

